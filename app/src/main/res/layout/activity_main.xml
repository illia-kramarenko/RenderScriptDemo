<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    android:background="#ff505050"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:text="JAVA c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="javaContrast"/>
        <TextView
            android:text="0.000"
            android:id="@+id/text"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:text="RS C"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:onClick="rsContrast"/>
            <Button
                android:text="Lut"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:onClick="lutContrast"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:text="blur"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:onClick="rsBlur"/>
            <Button
                android:text=""
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:onClick="nothing"/>
        </LinearLayout>

        <TextView
            android:text="0.000"
            android:id="@+id/text2"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:text="refresh"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:onClick="refresh"/>
        <EditText
            android:id="@+id/threadsInput"
            android:textSize="12dp"
            android:hint="Enter threads"
            android:inputType="number"
            android:textColorHint="#fff"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/ok"
            android:text="ok"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:onClick="onOkPressed"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:id="@+id/ImageView"/>

        <ProgressBar
            android:layout_centerInParent="true"
            android:visibility="invisible"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"/>
        <LinearLayout
            android:layout_below="@+id/ImageView"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="11"
                android:id="@+id/threads"
                android:textColor="#ff5050"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="22"
                android:id="@+id/resolution"
                android:textColor="#ff5050"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>
